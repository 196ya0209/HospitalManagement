@model MedicalRecord

<div class="container">
    <h2 class="display-1">Delete Medical Record</h2>
    <div>
        <h4>Are you sure you want to delete this record?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Patient</dt>
            <dd class="col-sm-10">@Model.PatientId</dd>

            <dt class="col-sm-2">Doctor</dt>
            <dd class="col-sm-10">@Model.DoctorId</dd>

            <dt class="col-sm-2">Diagnosis</dt>
            <dd class="col-sm-10">@Model.Diagnosis</dd>

            <dt class="col-sm-2">Treatment</dt>
            <dd class="col-sm-10">@Model.Treatment</dd>

            <dt class="col-sm-2">Date Created</dt>
            <dd class="col-sm-10">@Model.DateCreated</dd>
        </dl>
        <form asp-action="Delete" method="post" asp-controller="MedicalRecord" class="mb-0 list-inline mx-2">
            <input type="hidden" asp-for="RecordId" />
            <div class="form-group mb-3">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </div>
        </form>
    </div>
</div>
