@model Doctor

<div class="container">
    <h2>Edit Doctor</h2>
    <br />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data">
                <input type="hidden" asp-for="DoctorId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DoctorName" class="control-label"></label>
                    <input asp-for="DoctorName" class="form-control" />
                    <span asp-validation-for="DoctorName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Specialization" class="control-label"></label>
                    <input asp-for="Specialization" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="DocImageUrl" class="control-label"></label>
                    <input type="file" name="image" class="form-control" />
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-dark" asp-action="Index" asp-controller="Doctor">Back</a>
            </form>
        </div>
        <div class="col-md-6">
            @if (Model.DocImageUrl != null)
            {
                <img src="data:image;base64,@Convert.ToBase64String(Model.DocImageUrl)" class="card-img-top rounded w-50 img-fluid" alt="Doctor Image" />
            }
            else
            {
                <span>No image available</span>
            }
        </div>
    </div>
</div>
