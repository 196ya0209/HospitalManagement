@model Patient

<h2 class="fw-bolder display-1 mt-3">Patient Removal Area</h2>
<hr />
<h3>Are you sure you want to remove this patient?</h3>
<div>
    <div class="col-lg-3 col-md-6 mb-5 mb-lg-0">
        <div class="card shadow-sm border-0 rounded">
            <div class="card-body p-0">                
                <div class="p-4">
                    <h5 class="mb-0">@Model.PatientName</h5>
                    <p class="small text-muted">@Model.PatientAge</p>
                </div>

                <form asp-action="Delete" method="post" asp-controller="Patient" class="mb-0 list-inline mx-2">
                    <input type="hidden" asp-for="PatientId" />
                    <div class="form-group mb-3">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-light">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
