@model Patient

<div class="container">
    <h2 class="display-1">Edit Patient</h2>
    <hr />

    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="PatientId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientName" class="control-label"></label>
                <input asp-for="PatientName" class="form-control" />
                <span asp-validation-for="PatientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientAge" class="control-label"></label>
                <input asp-for="PatientAge" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="WardNumber" class="control-label"></label>
                <input asp-for="WardNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="AdmissionDate" class="control-label"></label>
                <input asp-for="AdmissionDate" class="form-control" />
            </div>
            <br/>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label class="form-check-label" asp-for="IsActive">Is Active</label>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-dark" asp-action="Index" asp-controller="Patient">Back</a>
        </form>
    </div>

</div>
